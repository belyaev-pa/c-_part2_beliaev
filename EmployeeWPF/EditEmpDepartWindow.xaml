<Window x:Name="EditEmpDepartWin" x:Class="EmployeeWPF.EditEmpDepartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeWPF"
        mc:Ignorable="d"
        Title="Выбор подразделения" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="240*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="departmentListBox" Grid.Row="0" Grid.Column="0" 
                 HorizontalAlignment="Stretch" 
                 VerticalAlignment="Stretch"/>
        <Button x:Name="btEmpChooseDepart" Content="Выбрать"
                HorizontalAlignment="Center" Grid.Row="1"
                VerticalAlignment="Center" Width="75"
                Grid.Column="0" Click="BtEmpChooseDepart_Click"/>

    </Grid>
</Window>
